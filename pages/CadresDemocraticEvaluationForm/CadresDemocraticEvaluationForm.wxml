<!--pages/CadresDemocraticEvaluationForm/CadresDemocraticEvaluationForm.wxml-->
<view>
  <text class="main_title" style=""> <text class="main_title_mask" style="">|</text>{{themeName}}</text>
</view>
<view class="page-section">

  <view class="flex-wrp" style="flex-direction:column;">
    <view class="flex-item flex-item-V content-text-1">
      <view class="content-text-1-info" style="">
        <block wx:for="{{questionArray}}" wx:key="index">
          <view style="">
            姓名：{{item.realname}}
          </view>
          <view style="">
            出生年月：{{item.birthday}}
          </view>
          <view style="">
            原任职务：{{item.originaljob}}
          </view>
          <view style="">
            现任职务：{{item.currentjob}}
          </view>
          <view style="">
            任职时间：{{item.workdate}}
          </view>
        </block>
      </view>
    </view>
  </view>
  <view class="flex-wrp" style="flex-direction:column;">
    <view class="flex-item flex-item-V content-text-1 ">
      <text class="" style="position:relative;top:20px "> <text class="content-text-1-title-mask"
          style="">|</text>sss</text>
      <view wx:if="{{questionArray[0].flag ==0}}">
        <radio-group bindchange="radiochange">
          <view wx:for="{{ questionArray[0].optionArray}}" wx:key="*this" wx:for-item="optionitem">
            <view style="margin-left:20px;">
              <radio value='{{optionitem.questionId}},{{optionitem.optionId}}'>
                {{optionitem.optionContent}}
              </radio>
            </view>
          </view>
        </radio-group>
      </view>
      <view wx:elif="{{questionArray[1].flag ==2}}">
        <text>222</text>
        <view class="textarea-wrp">
          <textarea bindblur="bindTextAreaBlur" style="height:150px;" />
        </view>
      </view>    
            <!-- <text>{{optionitem.optionContent}}</text> -->
    </view>
  </view>
</view>
