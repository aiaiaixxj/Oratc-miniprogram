<!--pages/DemocraticEvaluationForm/DemocraticEvaluationForm.wxml-->
<view>
  <text class="main_title" style=""> <text class="main_title_mask" style="">|</text> {{themeName}}</text>
</view>
<view>
  <view class="page-section">
    <view wx:for="{{ questionArray}}" wx:key="*this" wx:for-item="questionitem">
      <view class="flex-wrp" style="flex-direction:column;">
        <view class="flex-item flex-item-V content-text-1 ">
          <text class="" style="position:relative;top:20px "> <text class="content-text-1-title-mask"
              style="">|</text>{{questionitem.questionContent}}</text>
          <view wx:if="{{questionitem.flag ==0}}">
            <radio-group bindchange="radiochange">
              <view wx:for="{{questionitem.optionArray}}" wx:key="*this" wx:for-item="optionitem">

                <view style="margin-left:20px;margin-top:20px">

                  <radio value='{{questionitem.questionId}},{{optionitem.optionId}}'>
                    {{optionitem.optionContent}}
                  </radio>
                </view>
              </view>
            </radio-group>
          </view>

          <view wx:elif="{{questionitem.flag ==1}}">
            <view style="margin-left:20px;">
              <checkbox-group bindchange="checkboxChange">
                <view wx:for="{{questionitem.optionArray}}" wx:key="*this" wx:for-item="optionitem">
                <view style="margin-left:0px;">
                  <checkbox value='{{questionitem.questionId}},{{optionitem.optionId}}' data-id="{{questionitem.questionId}}" bindtap="check">
                    {{optionitem.optionContent}}
                  </checkbox>
                </view>
                </view>
              </checkbox-group>
            </view>
          </view>
          <view wx:elif="{{questionitem.flag ==2}}" bindtap="handleJumpPage" data-id="{{questionitem.questionId}}">
            <view class="textarea-wrp">
              <textarea bindblur="bindTextAreaBlur" style="height:150px;" />
              </view>
            </view>
               
            <!-- <text>{{optionitem.optionContent}}</text> -->
          </view>
        </view>
      </view>

    </view>
  </view>




