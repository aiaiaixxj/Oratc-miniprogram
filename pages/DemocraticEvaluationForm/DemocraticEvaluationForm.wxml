<!--pages/DemocraticEvaluationForm/DemocraticEvaluationForm.wxml-->
<view>
  <text class="main_title" style=""> <text class="main_title_mask" style="">|</text> 2020选人用人工作民主评价表</text>
</view>
<view class="page-section">
  <view class="flex-wrp" style="flex-direction:column;">
    <view class="flex-item flex-item-V content-text-1">
      <view>
        <text class="content-text-1-title" style=""> <text class="content-text-1-title-mask"
            style="">|</text>对本区（单位）选人用人工作的总体评价</text>
      </view>
      <radio-group bindchange="radiochange">
        <block wx:for="{{radioList}}" wx:key="index">
          <!-- {{item.name}} -->
          <view style="margin-left:20px;">
            <radio value='{{item.value}}' checked="{{item.checked}}">
              {{item.name}}
            </radio>
          </view>
        </block>
      </radio-group>
    </view>
    <view class="flex-item flex-item-V content-text-2">
      <view>
        <text class="content-text-1-title" style=""> <text class="content-text-1-title-mask"
            style="">|</text>对本区（单位）从严管理监督干部情况的评价</text>
      </view>
      <radio-group bindchange="radiochange">
        <block wx:for="{{radioList}}" wx:key="index">
          <!-- {{item.name}} -->
          <view style="margin-left:20px;">
            <radio value='{{item.value}}' checked="{{item.checked}}">
              {{item.name}}
            </radio>
          </view>
        </block>
      </radio-group>
    </view>
    <view class="flex-item flex-item-V content-text-3">
      <view>
        <text class="content-text-1-title" style=""> <text class="content-text-1-title-mask"
            style="">|</text>对本区（单位）选人用人工作存在的主要问题是什么？（可多选）</text>
      </view>
      
        <checkbox-group bindchange="checkboxChange" >
          <block wx:for="{{items}}" wx:key="index">
          <!-- {{item.name}} -->
          <view style="margin-left:20px;">
            <radio value='{{item.value}}' >
              {{item.name}}
            </radio>
          </view>
        </block>
        </checkbox-group>
      
    </view>
    <view class="flex-item flex-item-V content-text-3">
      <view>
        <text class="content-text-1-title" style=""> <text class="content-text-1-title-mask"
            style="">|</text>对本区（单位）从严管理监督干部情况的评价</text>
      </view>
    </view>
  </view>
</view>